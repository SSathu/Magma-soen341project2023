generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}



model User {
  id           Int      @id @default(autoincrement())
  FirstName    String
  LastName     String
  Email        String
  Password     String
  LoggedIn     Boolean  @default(false)
  PhoneNumber String?     
  City         String?
  Country      String?
  PostalCode   String?
  Bio          String?
}


model Postings {
  id             Int    @id @default(autoincrement())
  Email          String
  CompanyName    String
  jobTitle       String?
  jobDescription String?
  Salary         String
  Location       String
  Image String @default("")
  // user User @relation(fields: [userId], references: [id])
  // userId Int
}

